{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["apps/api/src/*"],
      "@web/*": ["apps/web/*"],
      "@shared/*": ["libs/shared/src/*"],
      "@libs/shared": ["libs/shared/src/index.ts"],
      "@libs/shared/*": ["libs/shared/src/*"]
    }
  }
} 